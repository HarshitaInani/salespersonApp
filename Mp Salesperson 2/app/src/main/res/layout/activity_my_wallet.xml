<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_wallet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="app.retailer.krina.shop.com.shopkrina_retailer.MyWallet"
    android:weightSum="1">


    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wallet"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />



    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"

        android:id="@+id/credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credit Rs"
        android:textAlignment="center"
        android:background="#83060606"
        android:textColor="#ffffff"
        android:textSize="21dp"/>


    <TextView
        android:visibility="gone"

        android:id="@+id/debit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debit Rs"
        android:textAlignment="center"
        android:background="#83060606"
        android:textColor="#ffffff"
        android:textSize="21dp"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount Rs"
        android:textAlignment="center"
        android:background="#83060606"
        android:textColor="#ffffff"
        android:textSize="21dp"/>


    <TextView

        android:textStyle="bold"

        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reward"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary" />



    <TextView
        android:layout_marginTop="10dp"

        android:id="@+id/used_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Used Point"
        android:textAlignment="center"
        android:background="#83060606"
        android:textColor="#ffffff"
        android:textSize="21dp"/>



    <TextView
        android:id="@+id/earning_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Earning Point"
        android:textAlignment="center"
        android:background="#83060606"
        android:textColor="#ffffff"
        android:textSize="21dp"/>



    <TextView
        android:id="@+id/milestone_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Milestone Point"
        android:textAlignment="center"
        android:background="#83060606"
        android:textColor="#ffffff"
        android:textSize="21dp"/>

    <TextView
        android:id="@+id/total_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total point"
        android:textAlignment="center"
        android:background="#83060606"
        android:textColor="#ffffff"
        android:textSize="21dp"/>



