<?xml version="1.0" encoding="utf-8"?>



<android.support.v4.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_beat_order"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.user.mp_salesperson.BeatOrderActivity"
    android:clipChildren="false"
    android:clipToPadding="false">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_default"
            />
        <TextView
            android:textColor="#000"

            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Customer Name ="
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">
        <TextView
            android:textColor="#000"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Customer Number ="
            android:autoLink="phone"
            android:id="@+id/contactnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/edit_customer_details"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded"
                android:text="Edit"
                android:textStyle="bold"
                />

        </LinearLayout>

        <TextView
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="Customer Sk code ="
        android:id="@+id/skCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000"

        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="Customer Wallet points ="
        android:id="@+id/rewards_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:visibility="gone"
        android:textColor="#000"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle_green"
        android:gravity="center"
        android:text="Place Order"
        android:id="@+id/placeOrder"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <TextView
        android:textColor="#000"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle_green"
        android:gravity="center"
        android:text="My Cart"
        android:id="@+id/my_cart_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <TextView
        android:textColor="#000"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle_green"
        android:gravity="center"
        android:text="Main Menu"
        android:id="@+id/home_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
        <TextView
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_red_dark"
            android:enabled="false"
            android:gravity="center"
            android:visibility="gone"
            android:text="Dial Not Available"
            android:id="@+id/dial_availability"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_green"
            android:gravity="center"
            android:text="Path"
            android:id="@+id/path"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_green"
            android:gravity="center"
            android:text="Nearby 10 outlets"
            android:id="@+id/top_outlets"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_green"
            android:gravity="center"
            android:text="Top Purchase  Brand"
            android:id="@+id/top_purchase_brand"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
        android:textColor="#000"
            android:visibility="gone"
        android:padding="5dp"
        android:text="Cancel Reason:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:id="@+id/radioGroup">
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:text="Visited/Not Order"
                android:textSize="15dp" />
            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:text="Not Visited"
                android:textSize="15dp" />


        </RadioGroup>
        <Spinner
            android:layout_margin="5dp"
            android:visibility="gone"
            android:id="@+id/bidOrderSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>
        <Spinner
            android:id="@+id/bidOrderSpinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="5dp"></Spinner>

    <EditText


        android:id="@+id/commentEt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="top|left"
        android:background="#D3D3D3"
        android:hint="Comments"
        android:lines="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_red_dark"
            android:visibility="gone"
            android:gravity="center"
            android:text="Order Not Placed"
            android:id="@+id/orderNotPlaced"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_red_dark"
            android:gravity="center"
            android:text="Order"
            android:id="@+id/Order"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle_red_dark"
        android:gravity="center"
        android:text="Updated"
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="30dp" />



<LinearLayout
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


    <TextView

        android:id="@+id/days30"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/rounded"
        android:text="Last 30 days"
        android:layout_weight="1"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/month3"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded"
        android:text="Last 3 months"
        android:gravity="center"
        android:layout_weight="1"
        />


</LinearLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
   android:layout_marginLeft="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@color/Green"/>
    <TextView
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
       android:textSize="10dp"
        android:layout_height="wrap_content"
        android:text="Delivered"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@color/Yellow"/>
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"

            android:layout_height="wrap_content"
            android:text="Process"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@color/Red"/>
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            />
    </LinearLayout>
</LinearLayout>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>