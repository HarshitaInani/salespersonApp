<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Name"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/cutomername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:layout_weight="1"
            android:textSize="15dp" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:src="@drawable/star"/>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <EditText
            android:id="@+id/shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/passwordlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="15dp" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="65dp"
            android:src="@drawable/star"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/passworderror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            >
            <EditText
                android:id="@+id/passwordedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/Black"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/citylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="15dp" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:src="@drawable/star"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/cityerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            >
           <android.support.v7.widget.AppCompatAutoCompleteTextView
               android:id="@+id/Autocity"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/arealayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
       >
        <TextView
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textSize="15dp" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:src="@drawable/star"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/areaerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/area"
            >
            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/Autoarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Billing Address GPS Coordinates"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/billingaddressGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping Address GPS Coordinates"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/shippingaddressGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Address"
                android:layout_weight="1"
                android:textSize="15dp" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:src="@drawable/star"/>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/shopaddresserror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <EditText
            android:id="@+id/shopaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIN_NO/GSTIN No:"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/Gstin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FSAAI/Ref/No/GumastaNo."
                android:layout_weight="1"
                android:textSize="15dp" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:src="@drawable/star"/>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/FSAAIerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <EditText
            android:id="@+id/FSAAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moblie No."
                android:layout_weight="1"
                android:textSize="15dp" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:src="@drawable/star"/>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/mobileerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Alternative Moblie No."
            android:layout_weight="1"
            android:textSize="15dp" />
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/altermobileerror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/altermobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly TurnOver"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/turnover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop Size"
            android:textSize="15dp" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <RadioButton
                android:id="@+id/size1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="less than 200 sq ft"/>
            <RadioButton
                android:id="@+id/size2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 200-500sq ft"/>
            <RadioButton
                android:id="@+id/size3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="more than 500 sq ft"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Documents"
            android:textSize="15dp">
        </TextView>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/star"/>
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/licenseimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pro"
            />
        <TextView
            android:textColor="#000"
            android:background="@drawable/rounded"
            android:text="License"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/license_image"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="25dp" />

    </LinearLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FF6347"
        android:padding="10dp"
        android:text="Register"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
</ScrollView>