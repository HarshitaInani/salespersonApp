<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyWallet">

    <android.support.v7.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="19dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                android:layout_margin="1dp"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/walleticon"/>

        <TextView
            android:layout_margin="10dp"

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Wallet"
            android:textColor="#080808"
            android:textSize="23dp"
            android:textStyle="bold"/>

            </LinearLayout>


        <TextView
            android:id="@+id/amount"

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fdfdfd"
            android:padding="5dp"
            android:text="Total Amount  00.00"
            android:textColor="#030303"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/rewardicon"/>

        <TextView
            android:layout_margin="10dp"
            android:gravity="center_vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Reward"
            android:textColor="#050505"
            android:textSize="23dp"
            android:textStyle="bold"/>

            </LinearLayout>
        <TextView
            android:id="@+id/used_point"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fdfcfc"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:text="Used Point - 00.00"
            android:textColor="#030303"
            android:textStyle="bold"/>

        <TextView

            android:visibility="gone"
            android:id="@+id/milestone_point"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fdfdfd"
            android:padding="5dp"
            android:text="Milestone Point - 00.00"
            android:textColor="#030303"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/earning_point"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fdfdfd"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:text="Earning Point - 00.00"
            android:textColor="#030303"
            android:textStyle="bold"/>

            <TextView
                android:visibility="gone"

                android:id="@+id/total_point"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fcfafa"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:text="Total Point - 00.00"
                android:textColor="#030303"
                android:textStyle="bold"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>