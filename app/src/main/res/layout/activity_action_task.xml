<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_action_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.user.mp_salesperson.ActionTaskActivity">



    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back"

        />


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardMaxElevation="3dp"
        android:layout_marginRight="10dp"

        android:layout_centerInParent="true"

        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        app:cardUseCompatPadding="false"
        android:background="#fff"
        xmlns:app2="http://schemas.android.com/apk/res-auto"


        >


    <LinearLayout
        android:layout_marginTop="20dp"
    android:id="@+id/ll1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
   <TextView
       android:textStyle="bold"

       android:textColor="@color/Black"
       android:layout_margin="5dp"
       android:id="@+id/customer_id"
       android:text="Customer Id"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />


    <TextView
        android:textStyle="bold"

        android:textColor="#444"
        android:layout_margin="5dp"

        android:id="@+id/people_name"
        android:text="People Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"

        android:textColor="#444"
        android:layout_margin="5dp"

        android:id="@+id/task_action"
        android:text="Task Action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Spinner


        android:id="@+id/action_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></Spinner>

    <EditText


        android:textColor="#444"

        android:id="@+id/task_comment"
        android:hint="Comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <Button

            android:layout_margin="3dp"
            android:background="@drawable/total"
            android:layout_gravity="end"
            android:text="Submit"
            android:textColor="#fff"
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"




            />

</LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
