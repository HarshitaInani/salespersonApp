<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.user.mp_salesperson.CheckOutActivity">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check_out"
    android:layout_width="match_parent"
android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.user.mp_salesperson.CheckOutActivity">




    <TextView
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/total"
        android:padding="5dp"
        android:gravity="center"
        android:text="Order"
        android:id="@+id/tvOrder"
        android:layout_alignParentBottom="true"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:textSize="16sp"
        android:layout_below="@+id/ll_layout"

        />

    <LinearLayout

        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_back"

            />



        <TextView
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Info:"
        />


        <TextView
            android:textColor="#444"
            android:id="@+id/tvShopName"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            />


        <TextView
            android:textColor="#444"

            android:id="@+id/tvPhoneno"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9999999999"
        />
    <TextView
        android:textColor="#444"

        android:id="@+id/tvAddress"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="134 vijay nagar"
        />

    <ImageView
        android:layout_marginTop="10dp"


        android:background="#444"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        />

    <TextView
        android:layout_marginTop="10dp"

        android:textStyle="bold"

        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Details:"

        />


        <EditText

            android:id="@+id/etEntry"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText

       android:id="@+id/etEmail"
       android:hint="Email"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />


    <EditText

        android:id="@+id/etAddress"
        android:hint="Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LightGrey"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/cart_frag_delivery_charges_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Delivery Charges: 0.00"
                android:textColor="@color/Black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvDpTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Dp: 0.0"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Total: 0.0"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />


        </LinearLayout>




    </LinearLayout>
</RelativeLayout>

    </ScrollView>